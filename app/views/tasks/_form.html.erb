<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> このプロパティの保存を禁止しました</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h1>タスク</h1>
  <div class="field">
    <%= form.label :task_name, "タスク名" %>
    <%= form.text_field :task_name %>
  </div>

  <div class="field">
    <%= form.label :task_detail, "内容" %>
    <%= form.text_field :task_detail %>
  </div>

  <div class="field">
    <%= form.label :expiry_date, "終了期限" %>
    <%= form.date_field :expiry_date %>
  </div>

  <div class="field">
    <%= form.label :status, "ステータス" %>
    <%= form.select :status, Task.statuses.keys.to_a %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to '戻る', tasks_path %>
