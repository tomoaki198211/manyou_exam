<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>

<%= form_with(url: search_tasks_path, scope: :task, local: true, method: :get) do |form| %>
  <%= form.text_field :keyword, value: @keyword, placeholder: "タイトル検索する" %>
  ステータス：<%= form.select :status, Task.statuses.keys.to_a, include_blank: true, selected: @status %>
  終了期限ソート：<%= form.select :expiry_keyword,["なし","降順","昇順"], selected: @expiry_keyword %>
  <%= form.submit "検索" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>内容</th>
      <th>終了期限</th>
      <th>登録日時</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="task_row">
        <td><%= task.task_name %></td>
        <td><%= task.task_detail %></td>
        <td><%= l task.expiry_date, format: :long %></td>
        <td><%= l task.created_at, format: :long %></td>
        <td><%= task.status %>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '削除してよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'タスクを登録する', new_task_path %>

