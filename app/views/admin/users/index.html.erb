<div class="content">
  <h1>ユーザー管理画面</h1>
  <p id="notice"><%= notice %></p>

  <table class="table list">
    <thead>
      <tr>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
        <th>タスク数</th>
        <th>登録日時</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr class="">
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= l user.created_at, format: :long %></td>
          <td><%= link_to '詳細', admin_user_path(user), class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to '編集', edit_admin_user_path(user), class: "btn btn-outline-success btn-sm" %></td>
          <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '削除してよろしいですか？' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>

