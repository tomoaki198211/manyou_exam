<!DOCTYPE html>
<html>
  <head>
    <title>ManyouExam</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="w-100">
      <div class="text-right">
        <%= link_to "タスク登録", new_task_path, class: "mr-3"%>
        <%= link_to "タスク一覧", tasks_path, class: "mr-3"  %>
        <% if logged_in? %>
          <%= link_to "マイページ", user_path(current_user.id), class: "mr-3" %>
          <%= link_to "管理画面", admin_users_path, class: "mr-3" %>
          <%= link_to "ログアウト", session_path(current_user.id), method: :delete, class: "mr-3" %>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
